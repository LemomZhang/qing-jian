/* components/music/index.wxss */
.music-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img{
  width: 422rpx;
  height: 422rpx;
  margin-top: 60rpx;
  border-radius: 50%;
  animation:circle 20s infinite linear;
}
.player-img{
  width: 64rpx;
  height: 64rpx;
  position: relative;
  bottom: 240rpx;
}
.img-text{
  width: 46rpx;
  height: 142rpx;
  position: relative;
  right: 320rpx;
  bottom: 160rpx;
}
.music-content{
      max-width: 500rpx;
}
@keyframes circle{
  0%{
    transform: rotate(360deg);
  }
  100%{
    transform: rotate(360deg);
  }
}